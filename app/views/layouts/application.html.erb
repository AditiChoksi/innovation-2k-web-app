						<% if user_signed_in? %>
						<li style="font-size: 14px">
							<a href="/my_enrollments"> <%= "#{current_user.email}" %> </a>
						</li>
						<li class="active" style="font-size: 14px">
							<%= link_to "Logout", destroy_user_session_path, method: :delete %>
						</li>
						<% end %>
					</ul>
					</td>
				</tr>
			</table>
			</center>
		</div>

